{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "types": ["vite/client", "vitest/globals"],
    "emitDeclarationOnly": true
  },
  "include": ["types", "packages", "env.d.ts", "vue.d.ts"],
  "exclude": [
    "packages/**/*.stories.ts",
    "packages/**/*.stories.js",
    "packages/**/*.test.ts",
    "packages/**/*.spec.ts"
  ]
}
